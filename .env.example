# Django Settings
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,capyvagas.example.com
DOMAIN=capyvagas.example.com

# Database Configuration (PostgreSQL)
POSTGRES_DB=capyvagas
POSTGRES_USER=capyvagas_user
POSTGRES_HOST=db
POSTGRES_PORT=5432
# Note: POSTGRES_PASSWORD is read from /run/secrets/postgres_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# WAHA Configuration
WAHA_URL=http://waha:3000
WAHA_SESSION_NAME=capyvagas_session
WAHA_TIMEOUT_SECONDS=5
# Note: WAHA_API_KEY is read from /run/secrets/waha_api_key

# WAHA Dashboard Credentials
WAHA_DASHBOARD_USERNAME=admin
# Note: WAHA_DASHBOARD_PASSWORD is read from /run/secrets/waha_dashboard_password

# WAHA Swagger Credentials
WHATSAPP_SWAGGER_USERNAME=swagger
# Note: WHATSAPP_SWAGGER_PASSWORD is read from /run/secrets/waha_swagger_password

# Bot Dashboard Credentials
BOT_DASHBOARD_USERNAME=admin
BOT_DASHBOARD_PASSWORD=changeme

# Django Admin Credentials (for initial superuser creation)
DJANGO_ADMIN_USERNAME=admin
DJANGO_ADMIN_PASSWORD=changeme

# Note: Sensitive secrets (SECRET_KEY, passwords, API keys) should be stored in the secrets/ directory
# See secrets/README.md for instructions on how to set them up
